<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_gallery">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.trabajopractico3.ui.home.HomeFragment"
        android:label="Agregar un Producto"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.trabajopractico3.ui.gallery.GalleryFragment"
        android:label="Lista de Productos"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.trabajopractico3.ui.slideshow.SlideshowFragment"
        android:label="@string/salir"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.trabajopractico3.mapa.MapsFragment"
        android:label="Última Ubicación"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/busquedaFragment"
        android:name="com.example.trabajopractico3.ui.busqueda.BusquedaFragment"
        android:label="Buscar un Producto"
        tools:layout="@layout/fragment_busqueda" >
        <action
            android:id="@+id/action_busquedaFragment_to_resultadoBusquedaFragment"
            app:destination="@id/resultadoBusquedaFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultadoBusquedaFragment"
        android:name="com.example.trabajopractico3.ui.busqueda.ResultadoBusquedaFragment"
        android:label="Detalle del Producto"
        tools:layout="@layout/fragment_resultado_busqueda" />
</navigation>